    <%#<%= f.label 'Category Image (must be more than 100x100 pixels)' %><br />%>
    <%#<%= f.file_field :cat_image %>%>
  <%#<div/>%>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
