- set_meta_tags :title => t(:'seo.sections.tutors'), :description => t(:'seo.sections.tutors_description')
#categories
  #show
    .row
      .span8
        %legend Выберите нужную категорию
        .row
          - root_tutor_categories.each_with_index do |category, index|
            - if ((index % 3) == 0) && index > 0
              .clear
            .span4
              .row.category_item
                .span1.category_icon
                  = link_to category do
                    = image_tag category.icon_url(:standart), :title => category, :class => 'rounded_2'
                .span3.list
                  %h3= link_to category, category
                  %ul
                    - for sub_category in category.top_tutor_subcategories do
                      %li
                        = link_to sub_category do
                          = "#{sub_category} (#{sub_category.tutors_count})"

        -#%hr/
