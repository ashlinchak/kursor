- set_meta_tags :title => tutor_category.name + ' | ' + t(:'seo.sections.tutors'), :description => tutor_category.description
#categories
  #show
    .row
      .span8
        %ul.breadcrumb
          %li
            = link_to t(:'tutor_categories.index_categories'), tutor_categories_path
          = breadcrumbs_for_tutor_category tutor_category
        = render 'tutor_filter'
        %h3= tutor_category.name
        %ul.categories.clearfix
          - for child in tutor_category.children
            %li
              %h3= link_to child, child
              - if child.children
                %ul.children-categories
                  - for child in child.children
                    %li= link_to child, child
        - if tutors.size > 0
          %ul.entries
            - for tut in tutors
              = render :partial => 'tutor_categories/tutor', :locals => { :tutor => tut }
          .page_navigation.clear= paginate tutors
        - else
          Нет зарегистрированных преподавателей в этой категории
        %hr/

      .span4
        = render :partial => 'shared/advertising/kursor_ads'
        %hr/
        = render :partial => 'shared/widgets/widgets'