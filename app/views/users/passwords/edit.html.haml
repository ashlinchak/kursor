%h2= t(:'devise.password_recover.title')
= form_for resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }, :validate => true do |f|
  = devise_error_messages!
  = f.hidden_field :reset_password_token
  %div
    = f.label :password, t(:'devise.password_recover.new_password')
    %br/
    = f.password_field :password
  %div
    = f.label :password_confirmation, t(:'devise.password_recover.confirm_new_password')
    %br/
    = f.password_field :password_confirmation
  %div= f.submit t(:'devise.password_recover.change')
= render "users/shared/links"
