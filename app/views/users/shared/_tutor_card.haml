.well#user-card
  .row
    .span1
      = link_to tutor_path(user.tutor), :class => 'thumbnail' do
        = image_tag user.tutor.avatar_url(:thumb)
    .span5
      .right-corner
        = link_to edit_tutor_path(user.tutor), :class => 'btn-small', :title => t(:'providers.edit.edit_profile') do
          %i.icon-pencil
          = t(:'most_common_labels.change')
      -#%p= t(:'users.cabinet.profile_card.title')
      %p
        %strong
          = link_to tutor_path(user.tutor) do
            = user.tutor.name
      = t(:'users.cabinet.profile_card.postings_count')
      = link_to user_postings_path(user) do
        = user.postings.count