.row
  .span8
    %legend Event
    -#
    %p
      %strong title
      %br
      = @event.title

    .form-actions
      = link_to 'Events', [event_parent, :events], :class => 'btn'
      = link_to 'Edit', [:edit, event_parent, :event], :class => 'btn'
      = link_to 'Destroy', [event_parent, :event], :method => "delete", :confirm => 'Are you sure?', :class => 'btn btn-danger'
  .span4