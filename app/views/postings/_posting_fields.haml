.row
  = render :partial => 'shared/form_errors', :locals => { :object => posting }
  .field.clearfix
    = f.label :title
    = f.text_field :title, :class => 'span16'
  .field.clearfix
    = f.label :excerpt
    = f.text_area :excerpt, :class => 'span16'
  .field.clearfix
    = f.label :body
    = f.text_area :body, :class => 'span16'
  = f.fields_for :images do |image|
    = render :partial => 'images/image_fields', :locals => { :f => image }
  .fields= link_to_add_fields "Add image", f, :images
  .field.clearfix
    = f.label :tags_list
    = f.text_field :tags_list, :value => posting.tags_list.map(&:name).join(', '), :class => 'span16'
