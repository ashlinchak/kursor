  = stylesheet_link_tag "application"
  /[if IE]
    %script{ :src => "http://html5shiv.googlecode.com/svn/trunk/html5.js" }
  = csrf_meta_tags
%body
  #page
    %header.container
      %h1#logo.ir
        = link_to 'Kursor.ua', root_url
      = render :partial => 'shared/login_bar'
      %nav.clear
        %ul.clearfix
          - root_categories.each do |item|
            %li
              = link_to item.name, item
          %li= link_to 'Новости', news_index_path
          %li= link_to 'Контакты', '/info/contacts'
    #main.container
      .flash= render 'shared/flash_messages'
      = yield

    %footer.container
      -#.footer-categories.clear.clearfix
