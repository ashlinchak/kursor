%head
  %meta{:charset => "utf-8"}/
  /
    Always force latest IE rendering engine (even in intranet) &amp; Chrome Frame
  %meta{"http-equiv"=>"X-UA-Compatible", :content=>"IE=edge,chrome=1"}
  %title= "Kursor"
  %meta{:content => "", :name => "description"}/
  %meta{:content => "", :name => "author"}/
  / Mobile viewport optimized: j.mp/bplateviewport
  %meta{:name => "viewport", :content => "width=device-width; initial-scale=1.0; maximum-scale=1.0;"}
  / Place favicon.ico and apple-touch-icon.png in the root of your domain and delete these references
  %link{:href => "/favicon.ico", :rel => "shortcut icon"}/
  %link{:href => "/apple-touch-icon.png", :rel => "apple-touch-icon"}/
  %link{ :href => "http://fonts.googleapis.com/css?family=Ubuntu&subset=cyrillic,latin", :rel => "stylesheet", :type => "text/css"}/
  = stylesheet_link_tag "application"
  = javascript_include_tag "application"
  /[if IE]
    %script{ :src => "http://html5shiv.googlecode.com/svn/trunk/html5.js" }
  %script{ :type => "text/javascript", :src => "http://userapi.com/js/api/openapi.js?49" }
  :javascript
    VK.init({apiId: 2900318, onlyWidgets: true})
  #fb-root
  :javascript
    (function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/ru_RU/all.js#xfbml=1&appId=383815018325312";
    fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
  = csrf_meta_tags
%body
  #page
    %header.container
      -#.container
      %h1#logo.ir
        = link_to 'КУРСОР - образовательный портал', root_url
      %form.form-search{ :action => '/search', :method => :get, :style => 'padding: 5px 5px 5px 20px; margin: 50px 0px 0px 0px; float: right;'}
        = text_field_tag 'q', params[:q], :class => 'input-large search-query'
        = button_tag 'Поиск', :class => 'btn'
      %span.pager{:style => 'padding: 5px; margin: 50px 0px 0px; float: right;'}
        %a
          Портал работает в тестовом режиме
      //.banner
      //  = image_tag 'banner_holder00.jpg'
      = render :partial => 'shared/top_nav'
      = render :partial => 'shared/login_bar'
    #main.container
      .flash= render 'shared/flash_messages'
      = yield
    %footer.container
      .row.footer
        .span9
          = t(:'site.copyright.rights').html_safe
        .span3{:style => 'text-align: right;'}
          = link_to root_url do
            = image_tag 'logo_small.png'

  = render :partial => 'shared/google_analytics_code'