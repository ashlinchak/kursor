= form_for(provider, :html => { :class => 'form-horizontal' }) do |f|
  = render :partial => "shared/form_errors", :locals => { :object => provider }
  = render :partial => 'providers/provider_fields', :locals => { :f => f, :provider => provider }
  .form-actions
    = submit_tag t(:'providers.edit.actions.save'), :class => 'btn btn-large btn-success'
    = link_to t(:'providers.edit.actions.cancel'), provider, :class => 'btn btn-large btn-warning'
