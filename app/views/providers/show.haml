- if provider.user === current_user
  = link_to t(:'site.actions.edit'), edit_provider_path(provider)
  %hr
= link_to( provider.category, category_path(provider.category) ) if provider.category
%hr
.column.span-16
  - if provider.logo_url
    .image-container
      = image_tag provider.logo_url(:thumb).to_s
  %h1= provider.name
  .custom-fields
    - if provider.custom_field_bindings.size > 0
      %ul
        - for field in provider.custom_field_bindings do
          %li
            %span= field.custom_field.name
            = field.value
  .description= markdown provider.description
  - if provider.description.blank?
    %p= t(:'providers.description.visit_website_for_more_info')
.column.span-8.last
  .categories
    - if provider.categorizings.size > 0
      %h4 Categories
      %ul
        - for categorizing in provider.categorizings do
          %li= link_to categorizing, category_path(categorizing.category.permalink), :class => 'link-icon icon-arrow'
  - if provider.location
    .location
      %h4 Address
      - if !provider.location.custom_city.blank?
        -#= "#{provider.location.city.region}, "
        = "#{provider.location.custom_city}, "
      - else
        = "#{provider.location.city}, "
      = "#{provider.location.street}, "
      = "#{provider.location.building.chomp}, "
      офис
      = provider.location.apartment
  - if provider.contacts.size > 0
    .contacts
      %h4 Contacts
      %ul
        - for contact in provider.contacts.by_type do
          %li
            %span{ :class => "span-icon icon-#{contact.contact_type}" }= contact_value contact

  - if provider.filials.size > 0
    %h4 Filials
    %ul
      - for filial in provider.filials do
        %li
          .location
            - if !filial.location.custom_city.blank?
              -#= "#{provider.location.city.region}, "
              = "#{filial.location.custom_city}, "
            - else
              = "#{filial.location.city}, "
            = "#{filial.location.street}, "
            = "#{filial.location.building.chomp}, "
            офис
            = filial.location.apartment


            - if filial.contacts.size > 0
              .contacts
                %ul
                  - for contact in filial.contacts.by_type do
                    %li
                      %span{ :class => "span-icon icon-#{contact.contact_type}" }= contact_value contact
