.control-group
  = f.label t(:'providers.edit.location.city'), :class => 'control-label'
  .controls
    = f.select :city_id, City.all.collect{|c| [c.name, c.id]}, :class => 'select-city', :prompt => t(:'admin.users.selectors.choose_city')
.control-group
  = f.label t(:'providers.edit.location.street'), :class => 'control-label'
  .controls
    = f.text_field :street, :class => 'span3'
.control-group
  = f.label t(:'providers.edit.location.building'), :class => 'control-label'
  .controls
    = f.text_field :building, :class => 'span3'
.control-group
  = f.label t(:'providers.edit.location.apartment'), :class => 'control-label'
  .controls
    = f.text_field :apartment, :class => 'span3'
