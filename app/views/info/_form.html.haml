= form_for info_page, :url => { :controller => :info } do |f|
  = render :partial => 'shared/form_errors', :locals => { :object => info_page }
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :permalink
    = f.text_field :permalink
  .field
    = f.label :parent_id
    = f.select :parent_id, info_pages
  .actions
    = f.submit 'Save'
