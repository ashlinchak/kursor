.column.span-14.border
  - categories.each do |category|
    %div.category-item
      %h3= link_to category.name, category
      -#.description= category.description
      %ul
        - category.children.each do |child|
          %li= link_to child.name, child
  %hr
    = link_to 'New Category', new_category_path

.column.span-5.border
  - news.each do |item|
    %ul.home-news.no-bullets
      %li
        .date= l item.created_at, :format => :short
        = link_to item.title, news_path(item)
