- set_meta_tags :title => t(:'seo.meta.home_title'), :description => t(:'seo.meta.home_description'), :keywords => t(:'seo.meta.home_keywords'), :separator => '', :reverse => false
#home
  .row
    .span8
      .coda-slider-wrapper
        .coda-slider.preload#coda-slider-1
          - root_posting_categories.each do |cat|
            .panel
              .panel-wrapper.row
                %h2.title= cat.name
                - for posting in cat.postings.order("created_at ASC").approved.limit(4) do
                  .mosaic-block.bar.span2
                    .mosaic-overlay
                      .details
                        %h4= link_to posting.title, posting
                        %p
                          = time_ago_in_words posting.created_at.to_s
                          назад
                        %p
                          -#= link_to posting.user do
                          = posting.user
                        %p
                          = link_to '', posting_path(posting) + '#disqus_thread'
                    .mosaic-backdrop
                      = image_tag posting.images.last.src_url(:medium).to_s
      %br/
      %h2.home-title= t(:'home.titles.categories')
      .row
        - root_categories.each_with_index do |category, index|
          - if ((index % 3) == 0) && index > 0
            .clear
          .span4
            .row.category_item
              .span1.category_icon
                = link_to category do
                  = image_tag category.icon_url(:standart), :title => category
              .span3.list
                %h3= link_to category, category
                %ul
                  - for sub_category in category.top_subcategories do
                    %li
                      = link_to sub_category do
                        = "#{sub_category} (#{sub_category.providers_count})"
    .span4
      = render :partial => 'shared/advertising/kursor_ads'
      %hr/
      = render :partial => 'shared/widgets/widgets'
