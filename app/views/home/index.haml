.row
  .span10
    %ul.home-postings
      - recent_postings.each do |posting|
        %li
          %article.posting
            .image= image_tag posting.images.last.src_url(:thumb).to_s
            %h3= link_to posting.title, posting
            .excerpt= posting.excerpt
            .date
              = time_ago_in_words posting.created_at
              назад

    -#.home-categories.clearfix
      -#- root_categories.each do |category|
        -#%div.category-item
          -#%h3= link_to category.name, category
          -#.description= category.description

  .span6
    .home-column
      %h2= t(:'home.titles.recent_providers')
      %ul.home-providers.no-bullets
        - providers.each do |item|
          %li
            %h3= link_to item.name, provider_path(item)
            -#.decription= excerpt(item.description, '', :radius => 48)

    .home-column
      %h2.title-news= t(:'home.titles.news')
      %ul.home-news.no-bullets
        - news.each do |item|
          %li
            .date= item.created_at.strftime("%d.%m.%y")
            %h3= link_to item.title, news_path(item)
