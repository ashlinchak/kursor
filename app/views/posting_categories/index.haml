#posting-categories
  #index
    .row
      .span8
        .row
          - posting_categories.each_with_index do |child, index|
            .span4
              %h2.category-title
                = link_to child.name, child
                - if child.children
                  = '(' + child.postings.size.to_s + ')'
              - for sub_post in child.postings.last(4)
                .item
                  = link_to sub_post do
                    = image_tag 'no-image-small.png', :width => '64px', :height => '64px', "data-original" => sub_post.images.last.src_url(:thumb).to_s unless sub_post.images
                  %h5
                    = link_to sub_post.title, sub_post
                  .info
                    = time_ago_in_words sub_post.created_at, :format => :long
                    назад
              .more-in
                = link_to posting_category_path(child) do
                  Больше в категории
                  %b= child.name
              - if child.children
                .children-categories
                  - for child in child.children
                    = link_to child.name, child
                    - if child.children
                      = '(' + child.postings.size.to_s + ')'
            - unless index % 2 == 0
              .row
        %hr/
        %h2.home-title= t(:'home.titles.featured_posting')
        %ul.entries
          - for p in all_postings
            = render :partial => 'posting_categories/posting', :locals => { :p => p }
        .page_navigation.clear= paginate all_postings
        %hr/
