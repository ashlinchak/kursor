.login-bar
  - if authenticated?
    = link_to current_user, my_profile_path
    - if authorized?
      \|
      = link_to 'Admin', admin_users_path
    \|
    = link_to t(:'sessions.destroy.title'), logout_url
  - else
    = link_to t(:'sessions.create.title'), login_url
    \|
    = link_to t(:'users.create.title'), new_user_url