.row
  .span5
    %h1#logo.ir
      = link_to 'КУРСОР - образовательный портал', root_url
    %form.form-search{ :action => '/search/', :method => :get, :style => 'padding: 0px 5px 5px 20px; margin: 0px 0px 10px 0px; width: 288px;'}
      .input-append
        = text_field_tag '', params[:q], :class => 'ajax-typeahead', "data-link" => '/search/auto_complete_search', :placeholder => 'название школы, курсов и т.д.', :style => 'width: 230px;'
        = button_tag :class => 'btn' do
          %i.icon-search
    -#= form_tag search_path, :method => :get do
      .field
        = text_field_tag :search, params[:search]
        = submit_tag 'Search', name: nil, class: 'btn'
  .span7
    .login-bar
      = render :partial => 'shared/login_bar'
    .banner
      -#HEADER_468_60
      #div-gpt-ad-1353586145771-0{ :style=>'width:468px; height:60px;'}
      :javascript
        googletag.cmd.push(function() { googletag.display('div-gpt-ad-1353586145771-0'); });
.row
  .span12
    = render :partial => 'shared/top_nav'