%h2 Admin panel
%hr/
.row
  .span3
    %h3 Statistics
    %table.table.table-bordered.table-striped.table-condensed
      %tbody
        %tr
          %td
            Administrators
          %td
            = @admin_users
        %tr
          %td
            = link_to 'Providers', admin_users_path
            approved
          %td
            = providers_approved
        %tr
          %td
            = link_to 'Providers', admin_users_path
            waiting
          %td
            %span.label.label-important
              = providers_waiting
        %tr
          %td
            = link_to 'Locations', admin_locations_path
          %td
            = @cities
        %tr
          %td
            = link_to 'Categories', admin_categories_path
          %td
            = @categories
        %tr
          %td
            = link_to 'News', admin_news_index_path
          %td
            = @news
        %tr
          %td
            = link_to 'Postings', admin_postings_path
          %td
            = @posts
        %tr
          %td
            Tags
          %td
            = @tags

  .span3
    %h3 What is today?
    %table.table.table-bordered.table-striped.table-condensed
      %tbody
        %tr
          %td
            = link_to 'Providers', admin_users_path
            registered
          %td
            %span.label.label-success
              = today_registered_providers
        %tr
          %td
            = link_to 'News', admin_news_index_path
            created
          %td
            = today_news_created
        %tr
          %td
            = link_to 'Postings', admin_postings_path
            created
          %td
            = today_postings_created

  .span3

