= form_for transfer_user, :url => admin_user_transfer_path(transfer_user), :html => { :class => 'form-horizontal' }  do |f|
  = render :partial => 'shared/form_errors', :locals => { :object => transfer_user }
  %fieldset
    %legend User transfering
    .control-group
      = f.label :email, :class => 'control-label'
      .controls
        = f.text_field :email, :class => 'input-xlarge'
    .control-group
      = f.label :password, :class => 'control-label'
      .controls
        = f.password_field :password, :class => 'input-xlarge'
        %input{ :name => 'current_user', :value => "#{current_user.email.split('@')[0]}", :type => :hidden }
        = button_tag 'Random Password', :type => :button, :class => 'btn btn-success random-password'
    .control-group
      = f.label :password_confirmation, :class => 'control-label'
      .controls
        = f.password_field :password_confirmation, :class => 'input-xlarge'

    .control-group
      %label.control-label
        Send Email?
      .controls
        = check_box_tag 'send_email', 'yes', true

  .form-actions
    = f.submit 'Save & Mail', :class => 'btn btn-large btn-primary'