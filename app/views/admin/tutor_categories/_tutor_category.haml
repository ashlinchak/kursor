%span.badge.badge-info
  = link_to admin_tutor_category_path(tutor_category) do
    = tutor_category.name
    - if tutor_category.children.present?
      %span.badge= tutor_category.children.size
-#- if category.children.present?
  %ul
    - for category in category.children
      %li= link_to category.name, edit_admin_category_path( category )
      = render :partial => 'category', :collection => category.children
