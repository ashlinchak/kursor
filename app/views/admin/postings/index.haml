%h1 Postings
%table
  %thead
    %tr
      %th Title
      %th User
      %th Date
      %th Actions
  %tbody
    - for posting in postings do
      %tr
        %td= link_to posting.title, admin_posting_path(posting)
        %td= posting.user
        %td= l posting.created_at, :format => :long
        %td
          = link_to 'Edit', edit_admin_posting_path(posting)
          = link_to 'Destroy', admin_posting_path(posting), :method => :delete, :confirm => 'Are you sure?'
%hr
= link_to 'New', new_admin_posting_path
