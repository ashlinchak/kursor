= form_for posting, :url => ( posting.new_record? ? admin_postings_path : admin_posting_path(posting) ), :html => {:class => 'form-stacked'} do |f|
  .row
    = render :partial => 'shared/form_errors', :locals => { :object => posting }
    .field.clearfix
      = f.label :title
      = f.text_field :title, :class => 'span16'
    .field.clearfix
      = f.label :excerpt
      = f.text_area :excerpt, :class => 'span16'
    .field.clearfix
      = f.label :body
      = f.text_area :body, :class => 'span16'
    = f.fields_for :images do |image|
      = render :partial => 'images/image_fields', :locals => { :f => image }
    .fields= link_to_add_fields "Add image", f, :images
    .field.clearfix
      = f.label :tags_list
      = f.text_field :tags_list, :class => 'span16'

  .actions
    = f.submit :class => 'btn'
    or
    = link_to 'Cancel', admin_postings_path

