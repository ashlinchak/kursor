= form_for wiki_page, :url => ( wiki_page.new_record? ? admin_wiki_index_path : admin_wiki_path(wiki_page) ), :html => { :class => 'form-horizontal'} do |f|
  = render :partial => 'shared/form_errors', :locals => { :object => wiki_page }
  .row
    .span12
      .field
        = f.label :title
      .field
        = f.text_field :title, :class => 'span9'
      %hr/
      .field
        = f.label :description
      .field
        = f.text_area :description, :class => 'span9', :style => 'height:60px;'
      %hr/
      .field
        = f.label :body
      .field
        = f.cktext_area :body
  %hr/
  .row
    .span6
      .field
        = f.label :permalink
      .field
        = f.text_field :permalink, :class => 'span5'
      %hr/
      .field
        = f.label :parent_id
      .field
        = f.select :parent_id, roots_wiki_pages.collect{|c| [c.title, c.id]}, {  :prompt => '== root ==', :include_blank => true }, :class => 'span3'
    .span6
      .field
        = f.label :image
      .field
        = image_tag wiki_page.image_url(:small) if wiki_page.image
        = f.file_field :image
        = f.hidden_field :image_cache
  .form-actions
    = f.submit 'Save', :class => 'btn btn-success btn-large'
