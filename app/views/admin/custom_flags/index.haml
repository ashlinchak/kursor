%h2= t(:'admin.custom_flags.headers.title')

= link_to new_admin_custom_flag_path do
  %i.icon-plus-sign
  = t(:'admin.custom_flags.buttons.create_custom_flag')

%hr/
%table.table.table-striped.table-bordered.table-condensed
  %thead
    %th{:style => 'width: 6px;' }
    %th= t(:'admin.custom_fields.headers.custom_field_name')
    %th{:style => 'width: 60px;'}
  %tbody.sort-custom_flags.sortable
    - for field in custom_flags do
      %tr{ :style => 'width: 100%;', :id => "sorted-item_#{field.id}", :class => 'custom_flag'}
        %td.drag-handle |:|
        %td= link_to field, edit_admin_custom_flag_path(field)
        %td= link_to '[X]', admin_custom_flag_path(field), :method => :destroy, :confirm => 'Are you sure?'
%hr/
= link_to new_admin_custom_flag_path do
  %i.icon-plus-sign
  = t(:'admin.custom_flags.buttons.create_custom_flag')
