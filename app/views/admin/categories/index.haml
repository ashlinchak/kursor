%table
  %thead
    %th Title
    %th Children
    %th{ :width => '100' } Actions
  - root_categories.each do |category|
    %tr
      %td= link_to category.name, category
      -#.description= category.description
      %td
        -if category.children
          %ul
            = render :partial => 'category', :collection => category.children
      %td
        = link_to 'Edit', edit_admin_category_path( category )
        \|
        = link_to 'Delete', admin_category_path( category ), :method => :delete, :confirm => 'Are you sure?'
%hr
  = link_to 'New Category', new_admin_category_path
