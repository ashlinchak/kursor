%legend= t(:'admin.provider_categories.title')
= link_to new_admin_category_path do
  %i.icon-plus-sign
  = t(:'admin.provider_categories.add')
%hr/
%table.table.table-striped.table-bordered.table-condensed
  %tbody.sort-categories.sortable
    - root_categories.each do |prov_category|
      %tr{:id => "sorted-item_#{prov_category.id}", :class => 'categorie'}
        %td.name
          = image_tag prov_category.icon_url(:standart), :class => 'rounded_2'
          %b= link_to prov_category.name, admin_category_path(prov_category)
        %td.children
          -if prov_category.children.present?
            %ul
              = render :partial => 'category', :collection => prov_category.children
        %td.drag-handle
          %i.icon-move
          %hr/
          = link_to edit_admin_category_path( prov_category ) do
            %i.icon-pencil
%hr/
= link_to new_admin_category_path do
  %i.icon-plus-sign
  = t(:'admin.provider_categories.add')