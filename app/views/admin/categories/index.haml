%table
  %thead
    %th Title
    %th Children
    %th{ :width => '100' } Actions
  - root_categories.each do |category|
    %tr
      %td= link_to category.name, category
      -#.description= category.description
      %td
        - category.children.each do |child|
          %li= link_to child.name, child
      %td
        = link_to 'Edit', edit_admin_category_path( category )
        \|
        = link_to 'Delete', admin_category_path( category ), :method => :delete
%hr
  = link_to 'New Category', new_admin_category_path